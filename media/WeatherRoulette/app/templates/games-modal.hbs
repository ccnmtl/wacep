{{#modal-dialog action="closeModal"}}
    <div class="roulette-modal-header">
        <h4>Select a Game</h4>
    </div>
    <div class="roulette-modal-body">
        <div class="roulette-puzzle-list">
            {{#each puzzle in content}}
                {{#puzzle-list-item puzzle=puzzle selected=selectedPuzzle}}
                    <label>
                        <input type="radio" name="roulette-game-button">
                        <strong>{{puzzle.displayName}}</strong>
                        &ndash; {{puzzle.description}}
                    </label>
                {{/puzzle-list-item}}
            {{/each}}
        </div>
    </div>
    <div class="roulette-modal-footer">
        <button {{action "closeModal"}}
            class="btn btn-default">
            Cancel
        </button>

        {{#if selectedPuzzle}}
            <button {{action "playPuzzle" selectedPuzzle}}
                class="btn btn-primary">
                Play
            </button>
        {{else}}
            <button
                disabled="disabled"
                class="btn btn-primary">
                Play
            </button>
        {{/if}}
    </div>
{{/modal-dialog}}
